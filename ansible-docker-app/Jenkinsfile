pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git url: 'https://github.com/gowthamselvarajgit/Jenkins_Learn.git', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                sudo apt-get update
                sudo apt-get install -y ansible docker.io curl
                sudo systemctl start docker
                sudo systemctl enable docker
                '''
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sh '''
                ansible-playbook -i inventory.ini playbook.yml
                '''
            }
        }

        stage('Verify Docker Container') {
            steps {
                sh '''
                echo "‚úÖ Listing running Docker containers:"
                docker ps

                echo "üåê Testing Flask app endpoint (localhost:5000):"
                curl --silent http://localhost:5000 || echo "‚ùå App not reachable"
                '''
            }
        }
    }
}
