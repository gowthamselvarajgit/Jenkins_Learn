pipeline {
    agent any

    environment {
        IMAGE_NAME = "testcase-docker-pipeline-image"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git url: 'https://github.com/gowthamselvarajgit/Jenkins_Learn.git', branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(env.IMAGE_NAME, "TestCaseDockerPipeline")
                }
            }
        }

        stage('Run Test in Container') {
            steps {
                script {
                    docker.image(env.IMAGE_NAME).run('--rm')
                }
            }
        }
    }
}
